.syntax unified
.cpu cortex-m0
.fpu softvfp
.thumb

//=============================================================================
// ECE 362 Lab Experiment 5
// Timers
//
//=============================================================================

.equ  RCC,      0x40021000
.equ  APB1ENR,  0x1C
.equ  AHBENR,   0x14
.equ  TIM6EN,	0x10
.equ  GPIOCEN,  0x00080000
.equ  GPIOBEN,  0x00040000
.equ  GPIOAEN,  0x00020000
.equ  GPIOC,    0x48000800
.equ  GPIOB,    0x48000400
.equ  GPIOA,    0x48000000
.equ  MODER,    0x00
.equ  PUPDR,    0x0c
.equ  IDR,      0x10
.equ  ODR,      0x14
.equ  PC0,      0x01
.equ  PC1,      0x04
.equ  PC2,      0x10
.equ  PC3,      0x40
.equ  PIN8,     0x00000100

// NVIC control registers...
.equ NVIC,		0xe000e000
.equ ISER, 		0x100
.equ ICER, 		0x180
.equ ISPR, 		0x200
.equ ICPR, 		0x280

// TIM6 control registers
.equ  TIM6, 	0x40001000
.equ  CR1,		0x00
.equ  DIER,		0x0C
.equ  PSC,		0x28
.equ  ARR,		0x2C
.equ  TIM6_DAC_IRQn, 17
.equ  SR,		0x10

//Student defined statments
.equ PSC_Val, 4799

//=======================================================
// 6.1: Configure timer 6
//=======================================================
.global init_TIM6
init_TIM6:
	PUSH {LR}
	//Enable TIM6//
	LDR R0, =RCC
	LDR R1, [R0, #APB1ENR] //Load Location for Timers
	LDR R2, =TIM6EN //Value to enable bit 5, TIM6EN
	ORRS R1, R2
	STR R1, [R0, #APB1ENR]
	//Set the PSC and ARR values for update 1ms
	LDR R0, =TIM6
	LDR R1, =PSC_Val  //PSC Value
	STR R1, [R0, #PSC] //Store PSC values
	LDR R1, =10-1 //ARR Value (n-1)
	STR R1, [R0, #ARR] //Store ARR value
	//Counter enable bit
	LDR R1, =0x1
	LDR R2, [R0, #CR1]
	ORRS R2, R1
	STR R2, [R0, #CR1]
	//Enable UIE in the TIMER 6 DIER register
	LDR R2, [R0, #DIER]
	ORRS R2, R1
	STR R2, [R0, #DIER]

	//Enable TIM6 interrupt in NVIC's ISER register.
	LDR R0, =NVIC
	LDR R1, =ISER
	LDR R2, [R0, R1]
	LDR R3, =0x1 //Set bit 17 of NVIC to unmask interrupt
	ORRS R2, R3
	STR R2, [R0, R1]
	//bx lr // Student may remove this instruction.

	POP {PC}


//=======================================================
// 6.2: Confiure GPIO
//=======================================================
.global init_GPIO
init_GPIO:
	bx lr // Student may remove this instruction.

//=======================================================
// 6.3 Blink blue LED using Timer 6 interrupt
// Write your interrupt service routine below.
//=======================================================


//=======================================================
// 6.5 Debounce keypad
//=======================================================
.global getKeyPressed
getKeyPressed:
	bx lr // Student may remove this instruction.

.global getKeyReleased
getKeyReleased:
	bx lr // Student may remove this instruction.
